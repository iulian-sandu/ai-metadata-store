{
  "file_name": "sample-acc1-dev-account.json",
  "file_type": "json",
  "description": "Configuration file for a sample AWS account used in the development environment. Contains account metadata, business ownership, contact details, and region-specific VPC network settings.",
  "fields": {
    "version": {
      "type": "string",
      "description": "Version of the configuration schema."
    },
    "account_id": {
      "type": "string",
      "description": "Unique AWS account identifier."
    },
    "application": {
      "type": "string",
      "description": "Name of the application or service this configuration is for."
    },
    "environment": {
      "type": "string",
      "description": "Deployment environment (e.g., dev, prod, test)."
    },
    "config": {
      "type": "object",
      "description": "Main configuration object containing account and regional details.",
      "fields": {
        "account_name": {
          "type": "string",
          "description": "Unique name for the AWS account configuration."
        },
        "description": {
          "type": "string",
          "description": "Description of the account's purpose."
        },
        "business_owner": {
          "type": "string",
          "description": "Name of the business owner responsible for the account."
        },
        "contact_email": {
          "type": "string",
          "description": "Primary contact email for the account."
        },
        "t-code": {
          "type": "string",
          "description": "Business or technical code associated with the account."
        },
        "business_unit": {
          "type": "string",
          "description": "Business unit to which this account belongs."
        },
        "regions": {
          "type": "object",
          "description": "Region-specific configuration details.",
          "fields": {
            "global": {
              "type": "object",
              "description": "Global settings applied across all regions.",
              "fields": {
                "iam_version": {
                  "type": "string",
                  "description": "Version of IAM configuration or policies."
                }
              }
            },
            "us-east-1": {
              "type": "object",
              "description": "Configuration for the us-east-1 AWS region.",
              "fields": {
                "vpc_cidr": {
                  "type": "string",
                  "description": "CIDR block for the VPC in us-east-1."
                },
                "vpc_public_subnets": {
                  "type": "array",
                  "description": "List of CIDR blocks for public subnets.",
                  "items": { "type": "string" }
                },
                "vpc_private_subnets": {
                  "type": "array",
                  "description": "List of CIDR blocks for private subnets.",
                  "items": { "type": "string" }
                },
                "vpc_availability_zone_ids": {
                  "type": "array",
                  "description": "List of availability zone IDs for subnet placement.",
                  "items": { "type": "string" }
                }
              }
            },
            "us-west-2": {
              "type": "object",
              "description": "Configuration for the us-west-2 AWS region.",
              "fields": {
                "vpc_cidr_range": {
                  "type": "string",
                  "description": "CIDR block for the VPC in us-west-2."
                },
                "vpc_public_subnets": {
                  "type": "array",
                  "description": "List of CIDR blocks for public subnets.",
                  "items": { "type": "string" }
                },
                "vpc_private_subnets": {
                  "type": "array",
                  "description": "List of CIDR blocks for private subnets.",
                  "items": { "type": "string" }
                },
                "vpc_availability_zone_ids": {
                  "type": "array",
                  "description": "List of availability zone IDs for subnet placement.",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}